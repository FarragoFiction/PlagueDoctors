<p id="notice"><%= notice %></p>

<h1>Caretakers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Doll</th>
      <th>Desc</th>
      <th>Good boi points</th>
      <th>Bad boi points</th>
      <th>Login</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @caretakers.each do |caretaker| %>
      <tr>
        <td><%= caretaker.name %></td>
        <td class = "dollString"><%= caretaker.doll %></td>
        <td><%= caretaker.desc %></td>
        <td><%= caretaker.good_boi_points %></td>
        <td><%= caretaker.bad_boi_points %></td>
        <td><%= caretaker.login %></td>
        <td><%= link_to 'Show', caretaker %></td>
        <td><%= link_to 'Edit', edit_caretaker_path(caretaker) %></td>
        <td><%= link_to 'Destroy', caretaker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

